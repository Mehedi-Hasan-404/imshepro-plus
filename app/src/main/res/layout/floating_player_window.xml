<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#000000">

    <FrameLayout
        android:id="@+id/floating_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Video Player with ExoPlayer controller -->
        <androidx.media3.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:show_buffering="when_playing"
            app:use_controller="true"
            app:controller_layout_id="@layout/floating_player_controls"
            app:show_timeout="3000"
            app:controller_hide_on_touch="false"
            app:resize_mode="fill"
            app:surface_type="texture_view" />

        <!-- Lock Overlay (shown when controls are locked) -->
        <FrameLayout
            android:id="@+id/lock_overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true">

            <!-- Unlock Button (appears in top-left when locked) -->
            <ImageButton
                android:id="@+id/unlock_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="top|start"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/ripple_square_white"
                android:src="@drawable/ic_lock_closed"
                android:tint="@android:color/white"
                android:contentDescription="Unlock controls"
                android:padding="6dp"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Top Controls Container -->
        <LinearLayout
            android:id="@+id/top_controls_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/gradient_overlay_top"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="32dp">

            <ImageButton
                android:id="@+id/btn_close"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_close"
                android:background="@drawable/ripple_square_white"
                android:tint="@android:color/white"
                android:contentDescription="Close"
                android:padding="4dp" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="Live Stream"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:singleLine="true"
                android:ellipsize="end" />

            <ImageButton
                android:id="@+id/btn_mute"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_volume_up"
                android:background="@drawable/ripple_square_white"
                android:tint="@android:color/white"
                android:layout_marginEnd="4dp"
                android:contentDescription="Mute"
                android:padding="4dp" />

            <ImageButton
                android:id="@+id/btn_fullscreen"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_fullscreen"
                android:background="@drawable/ripple_square_white"
                android:tint="@android:color/white"
                android:layout_marginEnd="4dp"
                android:contentDescription="Fullscreen"
                android:padding="4dp" />

            <ImageButton
                android:id="@+id/btn_lock"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_lock_open"
                android:background="@drawable/ripple_square_white"
                android:tint="@android:color/white"
                android:contentDescription="Lock"
                android:padding="4dp" />

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>
