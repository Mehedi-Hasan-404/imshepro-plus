<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="6dp" android:cardCornerRadius="8dp" android:cardElevation="2dp">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView android:id="@+id/img_logo" android:layout_width="match_parent" android:layout_height="120dp"
            android:scaleType="centerInside" android:src="@drawable/ic_channel_placeholder" />

        <ImageButton android:id="@+id/remove_button" android:layout_width="36dp" android:layout_height="36dp"
            android:layout_alignParentEnd="true" android:layout_margin="8dp" android:src="@drawable/ic_close" android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView android:id="@+id/tv_name" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_below="@id/img_logo" android:text="Channel name" android:textStyle="bold" android:paddingTop="6dp"/>

        <TextView android:id="@+id/tv_category" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_below="@id/tv_name" android:text="Category" android:textSize="12sp" android:alpha="0.8"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
