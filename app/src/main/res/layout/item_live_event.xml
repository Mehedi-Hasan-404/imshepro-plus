<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="#1F1F1F"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="#EF4444"
    app:strokeWidth="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- League Name -->
        <TextView
            android:id="@+id/leagueName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="League Name"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/categoryTag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Category Tag -->
        <TextView
            android:id="@+id/categoryTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_category_pill"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="Cricket"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/leagueName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/leagueName" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#3A3A3A"
            app:layout_constraintTop_toBottomOf="@+id/leagueName" />

        <!-- Team 1 Logo (CIRCULAR) -->
        <ImageView
            android:id="@+id/team1Logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Team 1"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:srcCompat="@tools:sample/avatars" />

        <!-- Team 1 Name -->
        <TextView
            android:id="@+id/team1Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="Team A"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/team1Logo"
            app:layout_constraintStart_toStartOf="@+id/team1Logo"
            app:layout_constraintTop_toBottomOf="@+id/team1Logo" />

        <!-- Team 2 Logo (CIRCULAR) -->
        <ImageView
            android:id="@+id/team2Logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="Team 2"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/team1Logo"
            tools:srcCompat="@tools:sample/avatars" />

        <!-- Team 2 Name -->
        <TextView
            android:id="@+id/team2Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:text="Team B"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/team2Logo"
            app:layout_constraintStart_toStartOf="@+id/team2Logo"
            app:layout_constraintTop_toBottomOf="@+id/team2Logo" />

        <!-- Center Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/team1Name"
            app:layout_constraintEnd_toStartOf="@+id/team2Logo"
            app:layout_constraintStart_toEndOf="@+id/team1Logo"
            app:layout_constraintTop_toTopOf="@+id/team1Logo">

            <!-- VS Text -->
            <TextView
                android:id="@+id/matchTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="VS"
                android:textColor="#B0BEC5"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- Larger Lottie Animation for LIVE -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/liveAnimation"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/live_animation"
                tools:visibility="visible" />

            <!-- Status Text (Time/Countdown) - BIGGER SIZE -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="10:00 PM"
                android:textColor="#10B981"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="visible" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
