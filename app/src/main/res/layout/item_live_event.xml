<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp"
    app:cardBackgroundColor="#1F1F1F"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:strokeColor="#EF4444"
    app:strokeWidth="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:minHeight="220dp">

        <!-- League Logo -->
        <ImageView
            android:id="@+id/leagueLogo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_channel_placeholder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- League Name -->
        <TextView
            android:id="@+id/leagueName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="sans-serif-black"
            android:text="League Name"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@+id/leagueLogo"
            app:layout_constraintEnd_toStartOf="@+id/categoryTag"
            app:layout_constraintStart_toEndOf="@+id/leagueLogo"
            app:layout_constraintTop_toTopOf="@+id/leagueLogo" />

        <!-- Category Tag -->
        <TextView
            android:id="@+id/categoryTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_category_pill"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="Cricket"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/leagueName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/leagueName" />

        <!-- Divider -->
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#3A3A3A"
            app:layout_constraintTop_toBottomOf="@+id/leagueLogo" />

        <!-- Team 1 Logo (CIRCULAR) -->
        <ImageView
            android:id="@+id/team1Logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Team 1"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:srcCompat="@tools:sample/avatars" />

        <!-- Team 1 Name -->
        <TextView
            android:id="@+id/team1Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:maxLines="2"
            android:text="Team A"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/centerSection"
            app:layout_constraintStart_toStartOf="@+id/team1Logo"
            app:layout_constraintTop_toBottomOf="@+id/team1Logo" />

        <!-- Center Section -->
        <LinearLayout
            android:id="@+id/centerSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/team1Name"
            app:layout_constraintEnd_toStartOf="@+id/team2Logo"
            app:layout_constraintStart_toEndOf="@+id/team1Logo"
            app:layout_constraintTop_toTopOf="@+id/team1Logo">

            <!-- Larger Lottie Animation for LIVE (120x90) -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/liveAnimation"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:visibility="gone"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/live_animation"
                tools:visibility="visible" />

            <!-- Match Time (for live events - elapsed time) -->
            <TextView
                android:id="@+id/matchTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-black"
                android:text="12:30 PM"
                android:textColor="#10B981"
                android:textSize="22sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Match Date (for upcoming events) -->
            <TextView
                android:id="@+id/matchDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium"
                android:text="Wed, 15 Jan 2026"
                android:textColor="#B0BEC5"
                android:textSize="14sp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- Countdown / Status Text -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-black"
                android:text="Starts in 2h 30m"
                android:textColor="#EF4444"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="gone" />

        </LinearLayout>

        <!-- Team 2 Logo (CIRCULAR) -->
        <ImageView
            android:id="@+id/team2Logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="Team 2"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/team1Logo"
            tools:srcCompat="@tools:sample/avatars" />

        <!-- Team 2 Name -->
        <TextView
            android:id="@+id/team2Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:maxLines="2"
            android:text="Team B"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/team2Logo"
            app:layout_constraintStart_toEndOf="@+id/centerSection"
            app:layout_constraintTop_toBottomOf="@+id/team2Logo" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
