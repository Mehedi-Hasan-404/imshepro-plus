<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Media Stream URL -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilStreamUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="@string/media_stream_url"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/input_background"
                app:boxStrokeColor="@color/input_stroke"
                app:hintTextColor="@color/input_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStreamUrl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="@color/input_hint"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Cookie Value -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCookie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/cookie_value"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/input_background"
                app:boxStrokeColor="@color/input_stroke"
                app:hintTextColor="@color/input_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCookie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="@color/input_hint"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Referer Value -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilReferer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/referer_value"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/input_background"
                app:boxStrokeColor="@color/input_stroke"
                app:hintTextColor="@color/input_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etReferer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="@color/input_hint"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Origin Value -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilOrigin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/origin_value"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/input_background"
                app:boxStrokeColor="@color/input_stroke"
                app:hintTextColor="@color/input_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etOrigin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="@color/input_hint"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- DRM License URL -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilDrmLicense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/drm_license_url"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/input_background"
                app:boxStrokeColor="@color/input_stroke"
                app:hintTextColor="@color/input_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDrmLicense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textUri"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="@color/input_hint"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- User Agent and DRM Scheme Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- User Agent Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilUserAgent"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:hint="@string/user_agent"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxStrokeColor="@color/input_stroke"
                    app:hintTextColor="@color/input_hint">

                    <AutoCompleteTextView
                        android:id="@+id/actvUserAgent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- DRM Scheme Dropdown -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilDrmScheme"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:hint="@string/drm_scheme"
                    app:boxBackgroundColor="@color/input_background"
                    app:boxStrokeColor="@color/input_stroke"
                    app:hintTextColor="@color/input_hint">

                    <AutoCompleteTextView
                        android:id="@+id/actvDrmScheme"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Custom User Agent Field (Hidden by default) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilCustomUserAgent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/custom_user_agent"
                android:visibility="gone"
                app:boxBackgroundMode="outline"
                app:boxBackgroundColor="@color/input_background"
                app:boxStrokeColor="@color/input_stroke"
                app:hintTextColor="@color/input_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCustomUserAgent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="@color/input_hint"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Floating Play Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="@string/play"
        android:src="@drawable/ic_play_custom"
        app:fabSize="normal"
        app:elevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
