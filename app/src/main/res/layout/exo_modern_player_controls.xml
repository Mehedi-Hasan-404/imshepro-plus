<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exo_controller_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <!-- Gradient overlays -->
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="top"
        android:background="@drawable/gradient_overlay_top" />

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_overlay_bottom" />

    <!-- Top container -->
    <LinearLayout
        android:id="@+id/exo_top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="top">
        
        <LinearLayout
            android:id="@+id/exo_top_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:paddingTop="0dp"
            android:paddingBottom="4dp"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/exo_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ripple_square_white"
                android:src="@drawable/ic_arrow_back"
                android:tint="@android:color/white"
                android:contentDescription="Back"
                android:clickable="true"
                android:focusable="true" />

            <TextView
                android:id="@+id/exo_channel_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Channel" />

            <ImageButton
                android:id="@+id/exo_pip"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ripple_square_white"
                android:src="@drawable/ic_pip"
                android:tint="@android:color/white"
                android:contentDescription="Picture in Picture"
                android:visibility="visible"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/exo_settings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ripple_square_white"
                android:src="@drawable/ic_settings"
                android:tint="@android:color/white"
                android:contentDescription="Settings"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/exo_mute"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ripple_square_white"
                android:src="@drawable/ic_volume_up"
                android:tint="@android:color/white"
                android:contentDescription="Mute"
                android:clickable="true"
                android:focusable="true" />

            <ImageButton
                android:id="@+id/exo_lock"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/ripple_square_white"
                android:src="@drawable/ic_lock_open"
                android:tint="@android:color/white"
                android:contentDescription="Lock controls"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

        <!-- Links RecyclerView for landscape mode -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/exo_links_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:clipToPadding="false"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Bottom bar with controls -->
    <LinearLayout
        android:id="@+id/exo_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="0dp"
        android:layout_gravity="bottom">

        <!-- Progress bar section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/exo_position"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center" />

            <androidx.media3.ui.DefaultTimeBar
                android:id="@id/exo_progress"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Playback control buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="8dp">

            <!-- Aspect Ratio Button -->
            <ImageButton
                android:id="@+id/exo_aspect_ratio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/ripple_square_white"
                android:src="@drawable/ic_aspect_ratio"
                android:tint="@android:color/white"
                android:contentDescription="Aspect ratio"
                android:visibility="visible"
                android:clickable="true"
                android:focusable="true"
                android:enabled="true" />

            <!-- Rewind Button -->
            <ImageButton
                android:id="@+id/exo_rewind"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ripple_square_white"
                android:src="@drawable/ic_skip_backward"
                android:tint="@android:color/white"
                android:contentDescription="Rewind 10 seconds"
                android:clickable="true"
                android:focusable="true"
                android:enabled="true" />

            <!-- Play/Pause Button -->
            <ImageButton
                android:id="@+id/exo_play_pause"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ripple_square_white"
                android:src="@drawable/ic_play"
                android:tint="@android:color/white"
                android:contentDescription="Play/Pause"
                android:clickable="true"
                android:focusable="true"
                android:enabled="true" />

            <!-- Forward Button -->
            <ImageButton
                android:id="@+id/exo_forward"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/ripple_square_white"
                android:src="@drawable/ic_skip_forward"
                android:tint="@android:color/white"
                android:contentDescription="Forward 10 seconds"
                android:clickable="true"
                android:focusable="true"
                android:enabled="true" />

            <!-- Fullscreen Button - THIS IS THE KEY BUTTON -->
            <ImageButton
                android:id="@+id/exo_fullscreen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ripple_square_white"
                android:src="@drawable/ic_fullscreen"
                android:tint="@android:color/white"
                android:contentDescription="Toggle fullscreen"
                android:visibility="visible"
                android:clickable="true"
                android:focusable="true"
                android:enabled="true" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
