<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exo_controller_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- Top bar: back, title, pip, settings, volume, lock -->
    <LinearLayout
        android:id="@+id/exo_top_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="0dp">

        <ImageButton
            android:id="@+id/exo_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/exo_channel_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Channel"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:ellipsize="end"
            android:maxLines="1" />

        <ImageButton
            android:id="@+id/exo_pip"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_pip"
            android:background="@android:color/transparent"
            android:contentDescription="PiP"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/exo_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_settings"
            android:background="@android:color/transparent"
            android:contentDescription="Settings"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/exo_volume"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_volume_up"
            android:background="@android:color/transparent"
            android:contentDescription="Volume"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/exo_lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_lock_open"
            android:background="@android:color/transparent"
            android:contentDescription="Lock"
            android:tint="@android:color/white" />

    </LinearLayout>

    <!-- Center overlay controls (keeps them visually above video) -->
    <LinearLayout
        android:id="@+id/exo_center_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal|bottom"
        android:paddingBottom="88dp"
        android:layout_marginTop="8dp">

        <!-- Seekbar area (time left - seekbar - time right) -->
        <LinearLayout
            android:id="@+id/exo_seekbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp">

            <TextView
                android:id="@+id/exo_position"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@android:color/white" />

            <SeekBar
                android:id="@+id/exo_progress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="100"
                android:progress="0"
                android:thumbTint="@android:color/white"
                android:progressTint="@android:color/white" />

            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@android:color/white" />

        </LinearLayout>

        <!-- Transport controls (positioned below seekbar, visually bottom of player) -->
        <LinearLayout
            android:id="@+id/exo_transport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="20dp">

            <ImageButton
                android:id="@+id/exo_aspect_ratio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_aspect_ratio"
                android:background="@android:color/transparent"
                android:contentDescription="Aspect ratio"
                android:tint="@android:color/white"
                android:layout_marginEnd="16dp" />

            <ImageButton
                android:id="@+id/exo_rewind"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_rewind"
                android:background="@android:color/transparent"
                android:contentDescription="Rewind"
                android:tint="@android:color/white"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/exo_play_pause"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/ic_play"
                android:background="@android:color/transparent"
                android:contentDescription="Play/Pause"
                android:tint="@android:color/white"
                android:scaleType="centerInside" />

            <ImageButton
                android:id="@+id/exo_forward"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_forward"
                android:background="@android:color/transparent"
                android:contentDescription="Forward"
                android:tint="@android:color/white"
                android:layout_marginStart="8dp" />

            <ImageButton
                android:id="@+id/exo_fullscreen"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_fullscreen"
                android:background="@android:color/transparent"
                android:contentDescription="Fullscreen"
                android:tint="@android:color/white"
                android:layout_marginStart="16dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- A small touchable overlay so PlayerView still receives hide/show on touch -->
    <View
        android:id="@+id/exo_touch_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent" />

</FrameLayout>
