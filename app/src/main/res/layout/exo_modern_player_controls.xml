<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exo_controller_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false">

    <!-- Top gradient overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="top"
        android:background="@drawable/gradient_overlay_top" />

    <!-- Bottom gradient overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:background="@drawable/gradient_overlay_bottom" />

    <!-- ========== TOP CONTROL BAR ========== -->
    <LinearLayout
        android:id="@+id/exo_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="0dp"
        android:paddingBottom="4dp"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageButton
            android:id="@+id/exo_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_white_borderless"
            android:src="@drawable/ic_arrow_back"
            android:tint="@android:color/white"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true" />

        <!-- Channel Name -->
        <TextView
            android:id="@+id/exo_channel_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Channel" />

        <!-- PiP Button -->
        <ImageButton
            android:id="@+id/exo_pip"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_white_borderless"
            android:src="@drawable/ic_pip"
            android:tint="@android:color/white"
            android:contentDescription="Picture in Picture"
            android:visibility="visible"
            android:clickable="true"
            android:focusable="true" />

        <!-- Settings Button -->
        <ImageButton
            android:id="@+id/exo_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_white_borderless"
            android:src="@drawable/ic_settings"
            android:tint="@android:color/white"
            android:contentDescription="Settings"
            android:clickable="true"
            android:focusable="true" />

        <!-- Mute Button -->
        <ImageButton
            android:id="@+id/exo_mute"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ripple_white_borderless"
            android:src="@drawable/ic_volume_up"
            android:tint="@android:color/white"
            android:contentDescription="Mute"
            android:clickable="true"
            android:focusable="true" />

        <!-- Lock Button -->
        <ImageButton
            android:id="@+id/exo_lock"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/ripple_white_borderless"
            android:src="@drawable/ic_lock_open"
            android:tint="@android:color/white"
            android:contentDescription="Lock controls"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- ========== BOTTOM CONTROL BAR ========== -->
    <LinearLayout
        android:id="@+id/exo_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="0dp"
        android:layout_gravity="bottom">

        <!-- Progress Bar Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <!-- Current Position -->
            <TextView
                android:id="@+id/exo_position"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center" />

            <!-- Progress/Seek Bar -->
            <androidx.media3.ui.DefaultTimeBar
                android:id="@id/exo_progress"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <!-- Total Duration -->
            <TextView
                android:id="@+id/exo_duration"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:text="0:00"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Playback Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingBottom="8dp">

            <!-- Aspect Ratio Button (Left) -->
            <ImageButton
                android:id="@+id/exo_aspect_ratio"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/ripple_white_borderless"
                android:src="@drawable/ic_aspect_ratio"
                android:tint="@android:color/white"
                android:contentDescription="Aspect ratio"
                android:visibility="visible"
                android:clickable="true"
                android:focusable="true" />

            <!-- Rewind 10s Button -->
            <ImageButton
                android:id="@+id/exo_rewind"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ripple_white_borderless"
                android:src="@drawable/ic_skip_backward"
                android:tint="@android:color/white"
                android:contentDescription="Rewind 10 seconds"
                android:clickable="true"
                android:focusable="true" />

            <!-- Play/Pause Button (Large Center Button) -->
            <ImageButton
                android:id="@+id/exo_play_pause"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/ripple_white_borderless"
                android:src="@drawable/ic_play"
                android:tint="@android:color/white"
                android:contentDescription="Play/Pause"
                android:clickable="true"
                android:focusable="true" />

            <!-- Forward 10s Button -->
            <ImageButton
                android:id="@+id/exo_forward"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/ripple_white_borderless"
                android:src="@drawable/ic_skip_forward"
                android:tint="@android:color/white"
                android:contentDescription="Forward 10 seconds"
                android:clickable="true"
                android:focusable="true" />

            <!-- Fullscreen Button (Right) -->
            <ImageButton
                android:id="@+id/exo_fullscreen"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/ripple_white_borderless"
                android:src="@drawable/ic_fullscreen"
                android:tint="@android:color/white"
                android:contentDescription="Toggle fullscreen"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
