<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeColor="#2A2A2A"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="#1A1A1A"
    android:foreground="?attr/selectableItemBackground">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">
        
        <!-- League Badge at top -->
        <TextView
            android:id="@+id/event_league"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="League"
            android:textColor="#4CAF50"
            android:textSize="10sp"
            android:textStyle="bold"
            android:gravity="center"
            android:paddingTop="2dp"
            android:paddingBottom="4dp" />
        
        <!-- Teams container (horizontal) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="4dp">
            
            <!-- Team 1 Logo -->
            <ImageView
                android:id="@+id/team1_logo"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:contentDescription="Team 1"
                android:src="@drawable/ic_channel_placeholder" />
            
            <!-- VS Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VS"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:paddingStart="4dp"
                android:paddingEnd="4dp" />
            
            <!-- Team 2 Logo -->
            <ImageView
                android:id="@+id/team2_logo"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:contentDescription="Team 2"
                android:src="@drawable/ic_channel_placeholder" />
        </LinearLayout>
        
        <!-- Event Title -->
        <TextView
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Team A vs Team B"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:ellipsize="end" />
        
        <!-- Live Indicator -->
        <LinearLayout
            android:id="@+id/live_indicator_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">
            
            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/circle_bg"
                android:backgroundTint="#EF4444" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LIVE"
                android:textColor="#EF4444"
                android:textSize="10sp"
                android:textStyle="bold"
                android:layout_marginStart="4dp" />
        </LinearLayout>
        
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
