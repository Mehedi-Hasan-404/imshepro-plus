<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">

    <!-- Circular Logo with Border (MORE red outline when selected) -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        
        <!-- Border Card (MORE Red when selected) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/category_card"
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:cardCornerRadius="32dp"
            app:cardElevation="0dp"
            app:strokeColor="#3A3A3A"
            app:strokeWidth="8dp"
            app:cardBackgroundColor="@android:color/transparent"
            android:foreground="?attr/selectableItemBackgroundBorderless">

            <!-- Inner Image Container -->
            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF">

                <ImageView
                    android:id="@+id/category_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="Category Logo" />

            </androidx.cardview.widget.CardView>

        </com.google.android.material.card.MaterialCardView>

    </FrameLayout>

    <!-- Category Name (VISIBLE with Marquee Scrolling) -->
    <TextView
        android:id="@+id/category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Cricket"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        android:textStyle="bold"
        android:gravity="center"
        android:maxWidth="70dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible" />

</LinearLayout>
