<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <!-- ===================== SPLASH / LOADING SCREEN =====================
         Packed vertical chain with percent-height icon.
         Compresses naturally in landscape without any scrolling. -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/splash_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/splash_padding_horizontal"
        android:paddingEnd="@dimen/splash_padding_horizontal"
        android:paddingTop="@dimen/splash_padding_vertical"
        android:paddingBottom="@dimen/splash_padding_vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="@dimen/splash_icon_size"
            android:layout_height="@dimen/splash_icon_size"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/app_name"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.38" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/splash_title_text_size"
            android:textStyle="bold"
            android:letterSpacing="0.08"
            android:fontFamily="@font/bergen_sans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_icon"
            app:layout_constraintBottom_toTopOf="@id/signal_loader" />

        <LinearLayout
            android:id="@+id/signal_loader"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_name"
            app:layout_constraintBottom_toTopOf="@id/version_text">

            <View android:id="@+id/bar1" android:layout_width="6dp" android:layout_height="40dp" android:layout_marginEnd="5dp" android:transformPivotY="40dp" android:background="@drawable/splash_bar_shape" />
            <View android:id="@+id/bar2" android:layout_width="6dp" android:layout_height="40dp" android:layout_marginEnd="5dp" android:transformPivotY="40dp" android:background="@drawable/splash_bar_shape" />
            <View android:id="@+id/bar3" android:layout_width="6dp" android:layout_height="40dp" android:layout_marginEnd="5dp" android:transformPivotY="40dp" android:background="@drawable/splash_bar_shape" />
            <View android:id="@+id/bar4" android:layout_width="6dp" android:layout_height="40dp" android:layout_marginEnd="5dp" android:transformPivotY="40dp" android:background="@drawable/splash_bar_shape" />
            <View android:id="@+id/bar5" android:layout_width="6dp" android:layout_height="40dp" android:transformPivotY="40dp" android:background="@drawable/splash_bar_shape" />

        </LinearLayout>

        <TextView
            android:id="@+id/version_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:textColor="@color/text_secondary_dark"
            android:textSize="@dimen/splash_version_text_size"
            android:letterSpacing="0.1"
            android:fontFamily="@font/bergen_sans"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/error_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/splash_error_text_size"
            android:textStyle="bold"
            android:visibility="gone"
            android:fontFamily="@font/bergen_sans"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/app_name"
            app:layout_constraintBottom_toTopOf="@id/buttons_row" />

        <LinearLayout
            android:id="@+id/buttons_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="@dimen/splash_button_horizontal_padding"
            android:paddingEnd="@dimen/splash_button_horizontal_padding"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/version_text">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/retry_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="0dp"
                android:layout_height="@dimen/splash_button_height"
                android:layout_weight="1"
                android:text="RETRY"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="@dimen/splash_button_text_size"
                android:fontFamily="@font/bergen_sans"
                android:focusable="true"
                app:backgroundTint="@color/accent"
                app:cornerRadius="8dp"
                app:rippleColor="#40FFFFFF" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ===================== UPDATE SCREEN =====================
         Single ConstraintLayout with a packed vertical chain.
         Icon uses percent height so it shrinks in landscape automatically.
         Buttons are anchored to the bottom, description floats between.
         Everything fits on screen in any orientation â€” no ScrollView needed. -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/update_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/splash_padding_horizontal"
        android:paddingEnd="@dimen/splash_padding_horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/update_app_icon"
            android:layout_width="@dimen/splash_icon_size"
            android:layout_height="@dimen/splash_icon_size"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_update_title"
            app:layout_constraintVertical_chainStyle="packed"
            app:layout_constraintVertical_bias="0.08" />

        <TextView
            android:id="@+id/tv_update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="New Update Available"
            android:textColor="@color/white"
            android:textSize="@dimen/splash_update_title_text_size"
            android:textStyle="bold"
            android:fontFamily="@font/bergen_sans"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/update_app_icon"
            app:layout_constraintBottom_toTopOf="@id/update_progress" />

        <!-- Progress bar: visible only during download -->
        <ProgressBar
            android:id="@+id/update_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="6dp"
            android:layout_marginTop="10dp"
            android:max="100"
            android:progressTint="@color/accent"
            android:progressBackgroundTint="#555555"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/tv_update_title"
            app:layout_constraintBottom_toTopOf="@id/tv_progress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/white"
            android:textSize="@dimen/splash_version_text_size"
            android:fontFamily="@font/bergen_sans"
            android:visibility="invisible"
            app:layout_constraintTop_toBottomOf="@id/update_progress"
            app:layout_constraintBottom_toTopOf="@id/btn_primary_action"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_primary_action"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="@dimen/splash_button_height"
            android:layout_marginTop="10dp"
            android:text="UPDATE APP"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/splash_button_text_size"
            android:letterSpacing="0.08"
            android:fontFamily="@font/bergen_sans"
            android:focusable="true"
            android:nextFocusDown="@id/btn_download_website"
            app:backgroundTint="@color/accent"
            app:cornerRadius="8dp"
            app:rippleColor="#40FFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tv_progress"
            app:layout_constraintBottom_toTopOf="@id/tv_update_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!--
            Description: sits between UPDATE APP and the bottom buttons.
            maxLines caps it so it never pushes buttons off screen.
        -->
        <TextView
            android:id="@+id/tv_update_description"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="You need to install the latest version. We will discontinue all the old version soon. Please download and install it. If the in-app update does not work, please download from our website."
            android:textColor="@color/white"
            android:textSize="@dimen/splash_description_text_size"
            android:lineSpacingExtra="2dp"
            android:fontFamily="@font/bergen_sans"
            android:gravity="center"
            android:ellipsize="end"
            android:maxLines="4"
            app:layout_constraintTop_toBottomOf="@id/btn_primary_action"
            app:layout_constraintBottom_toTopOf="@id/btn_download_website"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_download_website"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="@dimen/splash_button_height"
            android:layout_marginBottom="8dp"
            android:text="DOWNLOAD FROM WEBSITE"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/splash_button_text_size"
            android:letterSpacing="0.08"
            android:fontFamily="@font/bergen_sans"
            android:focusable="true"
            android:nextFocusUp="@id/btn_primary_action"
            android:nextFocusDown="@id/btn_update_later"
            app:backgroundTint="@color/accent"
            app:cornerRadius="8dp"
            app:rippleColor="#40FFFFFF"
            app:layout_constraintBottom_toTopOf="@id/btn_update_later"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_update_later"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="@dimen/splash_button_height"
            android:layout_marginBottom="24dp"
            android:text="UPDATE LATER"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/splash_button_text_size"
            android:letterSpacing="0.08"
            android:fontFamily="@font/bergen_sans"
            android:focusable="true"
            android:nextFocusUp="@id/btn_download_website"
            app:backgroundTint="@color/accent"
            app:cornerRadius="8dp"
            app:rippleColor="#40FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
