<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="match_parent"
    android:background="@drawable/bg_side_sheet"
    android:padding="20dp">

    <TextView
        android:id="@+id/tvSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <ImageButton
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:tint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvSettingsTitle"
        app:layout_constraintBottom_toBottomOf="@id/tvSettingsTitle"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvSettingsTitle">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnQuality"
            style="@style/SettingsBoxStyle">
            <LinearLayout style="@style/SettingsBoxContent">
                <ImageView style="@style/SettingsIcon" android:src="@drawable/ic_settings"/>
                <TextView style="@style/SettingsTitle" android:text="Quality"/>
                <TextView android:id="@+id/txtQuality" style="@style/SettingsValue" android:text="Auto"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btnSpeed"
            style="@style/SettingsBoxStyle">
            <LinearLayout style="@style/SettingsBoxContent">
                <ImageView style="@style/SettingsIcon" android:src="@drawable/ic_clock"/>
                <TextView style="@style/SettingsTitle" android:text="Speed"/>
                <TextView android:id="@+id/txtSpeed" style="@style/SettingsValue" android:text="Normal"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        
        </GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
