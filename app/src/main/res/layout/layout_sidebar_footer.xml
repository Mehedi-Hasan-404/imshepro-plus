<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="?attr/colorSurface"
    android:elevation="4dp"
    android:gravity="center">

    <ImageButton
        android:id="@+id/btn_theme_auto"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_auto_mode"
        android:tint="?attr/colorOnSurface"
        android:contentDescription="Auto Theme" />

    <ImageButton
        android:id="@+id/btn_theme_light"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_light_mode"
        android:tint="?attr/colorOnSurface"
        android:contentDescription="Light Theme" />

    <ImageButton
        android:id="@+id/btn_theme_dark"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_dark_mode"
        android:tint="?attr/colorOnSurface"
        android:contentDescription="Dark Theme" />

</LinearLayout>
