<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@drawable/ripple_item_bg"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:minHeight="56dp">

    <!-- Text Container - Takes up remaining space -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1920 Ã— 1080"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.20 Mbps"
            android:textColor="#999999"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- RadioButton - Fixed positioning -->
    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:button="@drawable/radio_button_selector"
        android:clickable="false"
        android:focusable="false"
        android:visibility="visible"
        android:padding="0dp"
        android:background="@null" />

    <!-- CheckBox - Fixed positioning, same size and position as RadioButton -->
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:button="@drawable/checkbox_ripple"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone"
        android:padding="0dp"
        android:background="@null" />

</LinearLayout>
