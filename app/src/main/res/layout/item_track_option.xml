<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="20dp"
    android:paddingEnd="12dp"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:background="@drawable/ripple_item_bg"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical">

    <!-- Text Container - Takes up remaining space -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1920 × 1080"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/tvSecondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8.20 Mbps"
            android:textColor="#999999"
            android:textSize="13sp"
            android:layout_marginTop="2dp" />
    </LinearLayout>

    <!-- Compose radio/checkbox — size constrained to strip M3's built-in 48dp touch target padding -->
    <androidx.compose.ui.platform.ComposeView
        android:id="@+id/composeToggle"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp" />

</LinearLayout>
