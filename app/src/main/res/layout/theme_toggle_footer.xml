<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:paddingTop="12dp"
    android:paddingBottom="20dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#2A2A2A"
        android:layout_marginBottom="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theme"
        android:textColor="?attr/colorOnSurface"
        android:textSize="13sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:fontFamily="@font/bergen_sans"
        android:layout_marginBottom="14dp"
        android:layout_marginStart="2dp"
        android:alpha="0.85" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/theme_toggle_background"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp">

        <LinearLayout
            android:id="@+id/theme_auto_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:background="@drawable/theme_button_background"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/theme_auto_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_theme_auto"
                android:tint="?attr/colorOnSurface"
                android:contentDescription="Auto theme" />

            <TextView
                android:id="@+id/theme_auto_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto"
                android:textColor="?attr/colorOnSurface"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:fontFamily="@font/bergen_sans"
                android:layout_marginTop="7dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/theme_light_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/theme_button_background"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/theme_light_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_theme_light"
                android:tint="?attr/colorOnSurface"
                android:contentDescription="Light theme" />

            <TextView
                android:id="@+id/theme_light_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light"
                android:textColor="?attr/colorOnSurface"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:fontFamily="@font/bergen_sans"
                android:layout_marginTop="7dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/theme_dark_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/theme_button_background"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/theme_dark_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_theme_dark"
                android:tint="?attr/colorOnSurface"
                android:contentDescription="Dark theme" />

            <TextView
                android:id="@+id/theme_dark_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark"
                android:textColor="?attr/colorOnSurface"
                android:textSize="11sp"
                android:textStyle="bold"
                android:letterSpacing="0.02"
                android:fontFamily="@font/bergen_sans"
                android:layout_marginTop="7dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
