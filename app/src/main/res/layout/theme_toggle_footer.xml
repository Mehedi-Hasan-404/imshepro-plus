<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:padding="16dp">

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"
        android:layout_marginBottom="16dp" />

    <!-- Theme Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Theme"
        android:textColor="?attr/colorOnSurface"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp" />

    <!-- Theme Toggle Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Auto Button -->
        <LinearLayout
            android:id="@+id/theme_auto_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/theme_auto_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_theme_auto"
                android:tint="?attr/colorOnSurface"
                android:contentDescription="Auto theme" />

            <TextView
                android:id="@+id/theme_auto_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auto"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Light Button -->
        <LinearLayout
            android:id="@+id/theme_light_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/theme_light_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_theme_light"
                android:tint="?attr/colorOnSurface"
                android:contentDescription="Light theme" />

            <TextView
                android:id="@+id/theme_light_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Light"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Dark Button -->
        <LinearLayout
            android:id="@+id/theme_dark_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="12dp"
            android:background="?attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/theme_dark_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_theme_dark"
                android:tint="?attr/colorOnSurface"
                android:contentDescription="Dark theme" />

            <TextView
                android:id="@+id/theme_dark_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dark"
                android:textColor="?attr/colorOnSurface"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
