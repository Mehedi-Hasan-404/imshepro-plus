<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- DARK THEME (Default) -->
    <style name="Theme.LiveTVPro" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">#1F1F1F</item>
        <item name="colorPrimaryVariant">#0A0A0A</item>
        <item name="colorSecondary">@color/secondary_dark</item>

        <item name="android:colorBackground">@color/background_dark</item>
        <item name="colorSurface">@color/surface_dark</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorOnBackground">@color/text_primary_dark</item>
        <item name="colorOnSurface">@color/text_secondary_dark</item>

        <item name="colorAccent">@color/accent</item>

        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/surface_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Disable elevation overlays -->
        <item name="elevationOverlayEnabled">false</item>
        <item name="elevationOverlayColor">@android:color/transparent</item>
        
        <!-- Set window background -->
        <item name="android:windowBackground">@color/background_dark</item>
    </style>

    <!-- LIGHT THEME -->
    <style name="Theme.LiveTVPro.Light" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryVariant">#F5F5F5</item>
        <item name="colorSecondary">#2196F3</item>

        <!-- Light backgrounds -->
        <item name="android:colorBackground">#FAFAFA</item>
        <item name="colorSurface">#FFFFFF</item>

        <!-- Dark text on light background -->
        <item name="colorOnPrimary">#000000</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <item name="colorOnBackground">#000000</item>
        <item name="colorOnSurface">#666666</item>

        <!-- Red accent color -->
        <item name="colorAccent">@color/accent</item>

        <!-- Light status bar -->
        <item name="android:statusBarColor">#FAFAFA</item>
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Disable elevation overlays -->
        <item name="elevationOverlayEnabled">false</item>
        <item name="elevationOverlayColor">@android:color/transparent</item>
        
        <!-- Set window background -->
        <item name="android:windowBackground">#FAFAFA</item>
    </style>

    <!-- FULLSCREEN THEME -->
    <!-- Note: We handle fullscreen programmatically based on orientation -->
    <!-- Portrait = status bar visible, Landscape = truly fullscreen -->
    <style name="Theme.LiveTVPro.Fullscreen" parent="Theme.LiveTVPro">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- TAB TEXT STYLE -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
</resources>
