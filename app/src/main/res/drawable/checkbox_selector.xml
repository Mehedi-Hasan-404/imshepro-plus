<?xml version="1.0" encoding="utf-8"?>
<!-- Save as: app/src/main/res/drawable/checkbox_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Checked state - Red checkmark -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Outer red square -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#EF4444"/>
                    <corners android:radius="4dp"/>
                    <size android:width="22dp" android:height="22dp"/>
                </shape>
            </item>
            <!-- White checkmark -->
            <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
                <shape android:shape="rectangle">
                    <!-- This is a simplified checkmark representation -->
                    <solid android:color="#FFFFFF"/>
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Unchecked state - Gray square outline -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:width="2.5dp" android:color="#666666"/>
            <corners android:radius="4dp"/>
            <solid android:color="@android:color/transparent"/>
            <size android:width="22dp" android:height="22dp"/>
        </shape>
    </item>
    
</selector>
