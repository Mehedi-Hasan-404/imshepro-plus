<?xml version="1.0" encoding="utf-8"?>
<!-- Save as: res/drawable/checkbox_selector.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Checked state - Solid RED square -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF0000"/>
            <corners android:radius="2dp"/>
            <size android:width="22dp" android:height="22dp"/>
        </shape>
    </item>
    
    <!-- Unchecked state - Empty square with gray border -->
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="#757575"/>
            <corners android:radius="2dp"/>
            <solid android:color="@android:color/transparent"/>
            <size android:width="22dp" android:height="22dp"/>
        </shape>
    </item>
    
</selector>
