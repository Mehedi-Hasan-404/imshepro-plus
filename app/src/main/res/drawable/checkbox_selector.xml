<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Checked state - Red filled square with white checkmark -->
    <item android:state_checked="true">
        <layer-list>
            <!-- Shadow/depth effect -->
            <item android:top="1dp" android:left="1dp">
                <shape android:shape="rectangle">
                    <size android:width="22dp" android:height="22dp" />
                    <solid android:color="#CC0000" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <!-- Main background square -->
            <item android:bottom="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <size android:width="22dp" android:height="22dp" />
                    <solid android:color="#FF0000" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <!-- White checkmark - short stroke (bottom-left part of ✓) -->
            <item android:top="11dp" android:left="5dp" android:bottom="7dp" android:right="13dp">
                <rotate
                    android:fromDegrees="45"
                    android:pivotX="0%"
                    android:pivotY="100%">
                    <shape android:shape="rectangle">
                        <size android:width="3dp" android:height="7dp"/>
                        <solid android:color="@android:color/white" />
                        <corners android:radius="1dp" />
                    </shape>
                </rotate>
            </item>
            <!-- White checkmark - long stroke (right part of ✓) -->
            <item android:top="5dp" android:left="8dp" android:bottom="7dp" android:right="6dp">
                <rotate
                    android:fromDegrees="-45"
                    android:pivotX="100%"
                    android:pivotY="100%">
                    <shape android:shape="rectangle">
                        <size android:width="3dp" android:height="14dp"/>
                        <solid android:color="@android:color/white" />
                        <corners android:radius="1dp" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>
    
    <!-- Unchecked state - Gray square outline with depth -->
    <item android:state_checked="false">
        <layer-list>
            <!-- Shadow/depth effect -->
            <item android:top="1dp" android:left="1dp">
                <shape android:shape="rectangle">
                    <size android:width="22dp" android:height="22dp" />
                    <solid android:color="#3A3A3A" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <!-- Main border -->
            <item android:bottom="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <size android:width="22dp" android:height="22dp" />
                    <stroke android:width="2.5dp" android:color="#8A8A8A" />
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <!-- Default state -->
    <item>
        <layer-list>
            <item android:top="1dp" android:left="1dp">
                <shape android:shape="rectangle">
                    <size android:width="22dp" android:height="22dp" />
                    <solid android:color="#3A3A3A" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
            <item android:bottom="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <size android:width="22dp" android:height="22dp" />
                    <stroke android:width="2.5dp" android:color="#8A8A8A" />
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="3dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>
