<?xml version="1.0" encoding="utf-8"?>
<!--
    TV Layout: Google TV-style top navigation bar + sidebar drawer
    - DrawerLayout root so the sidebar (NavigationView) works on TV too
    - App name "Live TV Pro" on the right (like "Google TV" branding)
    - Search icon beside the app name (top-right)
    - Horizontal text tabs: Live Events · Categories · Sports · Favorites
    - Avatar click opens the sidebar drawer
    - No bottom navigation, no refresh icon
-->
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- ════════════════════════════════════════════════════
         MAIN CONTENT
         ════════════════════════════════════════════════════ -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_dark">

        <!-- ═══════════════════════════════════════════════════════════
             TOP BAR  (mimics Google TV's navigation bar)
             Left:  avatar (taps to open drawer) + horizontal text tabs
             Right: search icon | "Live TV Pro" branding
             ═══════════════════════════════════════════════════════════ -->
        <LinearLayout
            android:id="@+id/tv_top_bar"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:background="@color/background_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Avatar — tapping it opens the drawer (like the profile icon in Google TV) -->
            <ImageView
                android:id="@+id/tv_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="16dp"
                android:src="@mipmap/ic_launcher_round"
                android:scaleType="centerCrop"
                android:background="@drawable/circular_logo_background"
                android:clipToOutline="true"
                android:focusable="true"
                android:clickable="true"
                android:contentDescription="Open menu" />

            <!-- Horizontal tab strip -->
            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scrollbars="none"
                android:overScrollMode="never"
                android:fillViewport="false">

                <LinearLayout
                    android:id="@+id/tv_tab_strip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_tab_live"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/nav_live"
                        android:textColor="@color/tv_tab_text_color"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@drawable/tv_tab_background"
                        android:focusable="true"
                        android:clickable="true" />

                    <TextView
                        android:id="@+id/tv_tab_home"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/nav_home"
                        android:textColor="@color/tv_tab_text_color"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@drawable/tv_tab_background"
                        android:focusable="true"
                        android:clickable="true" />

                    <TextView
                        android:id="@+id/tv_tab_sports"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/nav_sports"
                        android:textColor="@color/tv_tab_text_color"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@drawable/tv_tab_background"
                        android:focusable="true"
                        android:clickable="true" />

                    <TextView
                        android:id="@+id/tv_tab_favorites"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/nav_favorites"
                        android:textColor="@color/tv_tab_text_color"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@drawable/tv_tab_background"
                        android:focusable="true"
                        android:clickable="true" />

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Search icon -->
            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Search"
                android:src="@drawable/ic_search"
                android:tint="@color/white"
                android:padding="8dp"
                android:focusable="true" />

            <!-- "Live TV Pro" branding -->
            <TextView
                android:id="@+id/tv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:alpha="0.85" />

        </LinearLayout>

        <!-- Thin divider -->
        <View
            android:id="@+id/tv_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#1AFFFFFF"
            app:layout_constraintTop_toBottomOf="@id/tv_top_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Search bar (hidden by default) -->
        <LinearLayout
            android:id="@+id/tv_search_bar"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:paddingEnd="16dp"
            android:background="@color/surface_dark"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                app:iconifiedByDefault="false"
                app:queryHint="Search channels…"
                app:searchIcon="@null"
                app:closeIcon="@null"
                app:queryBackground="@android:color/transparent" />

            <ImageButton
                android:id="@+id/btn_search_clear"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Clear"
                android:src="@drawable/ic_close"
                android:tint="@color/white"
                android:padding="8dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Fragment container -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:defaultNavHost="true"
            app:navGraph="@navigation/nav_graph"
            app:layout_constraintTop_toBottomOf="@id/tv_divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Global error overlay -->
        <LinearLayout
            android:id="@+id/global_error_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@color/background_dark"
            android:visibility="gone"
            android:elevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/global_error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/global_retry_button"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingStart="36dp"
                android:paddingEnd="36dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="RETRY"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                app:backgroundTint="@color/accent"
                app:cornerRadius="8dp"
                app:rippleColor="#40FFFFFF" />

        </LinearLayout>

        <!-- Stub: toolbar (gone — TV uses top bar instead) -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Stub: toolbar title (gone on TV) -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Stub: favorites button (gone — Favorites is a tab on TV) -->
        <ImageButton
            android:id="@+id/btn_favorites"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Stub: bottom navigation (gone on TV) -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/bottom_nav_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ════════════════════════════════════════════════════
         SIDEBAR DRAWER  (same as phone — gravity start)
         ════════════════════════════════════════════════════ -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
